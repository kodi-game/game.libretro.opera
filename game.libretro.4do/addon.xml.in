<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.4do"
		name="The 3DO Company - 3DO (4DO)"
		version="1.0.0.0"
		provider-name="Libretro">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
		<import addon="game.controller.3do" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_windows="game.libretro.4do.dll">
		<platforms>3DO</platforms>
		<extensions>iso|bin|chd|cue</extensions>
		<supports_vfs>false</supports_vfs>
		<supports_standalone>true</supports_standalone>
	</extension>
	<extension point="xbmc.addon.metadata">
		<license>LGPL/Non-commercial</license>
		<platform>windows-x86_64</platform>
		<source>https://github.com/kodi-game/game.libretro.4do</source>
		<assets>
			<icon>resources/icon.png</icon>
		</assets>
		<summary lang="en_GB">The 3DO Company - 3DO (Opera)</summary>
		<description lang="en_GB">4DO emulates the 3DO Interactive Multiplayer video game system, often called simply the 3DO.[CR][CR]4DO is based on the FreeDO source code.</description>
	</extension>
</addon>
